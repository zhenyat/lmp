<h1>Listing behaviors</h1>

<table>
  <thead>
    <tr>
      <th>Competency</th>
      <th>Level</th>
      <th>Content</th>
      <th>Active</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @behaviors.each do |behavior| %>
      <tr>
        <td><%= behavior.competency_id %></td>
        <td><%= behavior.level_id %></td>
        <td><%= behavior.content %></td>
        <td><%= behavior.active %></td>
        <td><%= link_to 'Show', [:admin, behavior] %></td>
        <td><%= link_to 'Edit', edit_admin_behavior_path(behavior) %></td>
        <td><%= link_to 'Destroy', [:admin, behavior], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

